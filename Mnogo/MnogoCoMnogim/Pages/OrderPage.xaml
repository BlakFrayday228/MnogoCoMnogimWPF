<Page x:Class="MnogoCoMnogim.Pages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MnogoCoMnogim.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Введите название товара"/>
            <ComboBox x:Name="CBName" DisplayMemberPath="Name" SelectedItem="{Binding Name}"/>
            <TextBlock Text="Дата Заказа"/>
            <DatePicker SelectedDate="{Binding Date}"/>
            <TextBlock Text="Выберите цену товара"/>
            <ComboBox x:Name="CBSumma" DisplayMemberPath="Price" SelectedItem="{Binding Price}"/>
            <TextBlock Text="Выберите вид доставки"/>
            <ComboBox x:Name="CDDeliveri" SelectedItem="{Binding TypeOfDelivery}"/>
            <Button x:Name="BADDOREr" Content="Создать заказ" HorizontalAlignment="Center" Click="BADDOREr_Click"/>
        </StackPanel>
    </Grid>
</Page>

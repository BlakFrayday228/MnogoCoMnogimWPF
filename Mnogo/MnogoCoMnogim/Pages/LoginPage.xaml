<Page x:Class="MnogoCoMnogim.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MnogoCoMnogim.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Химситка" HorizontalAlignment="Center" Grid.Row="0"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Логин"/>
            <TextBox/>
            <TextBlock Text="Пароль"/>
            <TextBox />
            <Button x:Name="BLogin" Content="Войти" Click="BLogin_Click"/>
            <Button x:Name="BRegistr" Content="Зарегистрироваться" Click="BRegistr_Click"/>
        </StackPanel>
    </Grid>
</Page>
